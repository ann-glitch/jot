<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/jot.jpeg">
      <h3 class="text-center">Account Register</h3>
      <form action="/users/register" method="post">
         <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="name" class="form-control" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="email" class="mt-3">Email</label>
          <input type="email" name="email" class="form-control" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="password" class="mt-3">Password</label>
          <input type="password" name="password" class="form-control" value="{{password}}" required>
        </div>
          <div class="form-group">
          <label for="password2" class="mt-3">Confirm Password</label>
          <input type="password2" name="password2" class="form-control" value="{{password2}}" required>
        </div>
        <button type="submit" class="btn btn-dark mt-3">Submit</button>
      </form>
    </div>
  </div>
</div>