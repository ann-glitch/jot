<div class="card card-body">
    <h3>Project Idea</h3>
    <form action="/ideas" method="post">
    <div class="form-group">
        <label for="title" class="mt-3">Title</label>
        <input type="text" name="title" class="form-control mt-3" required>
    </div>
     <div class="form-group">
        <label for="details" class="mt-3">Details</label>
        <textarea type="text" name="details" class="form-control mt-3" required></textarea>
    </div>
    <button type="submit" class="btn btn-dark mt-3">Submit</button>
    </form>
</div>