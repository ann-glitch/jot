
 <div class="card card-body">
    <h3>Edit Project Idea</h3>
    <form action="/ideas/{{data._id}}?_method=PUT" method="post">
     <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title" class="mt-3">Title</label>
        <input type="text" name="title" value="{{data.title}}" class="form-control mt-3">
    </div>
     <div class="form-group">
        <label for="details" class="mt-3">Details</label>
        <textarea type="text" name="details" class="form-control mt-3">{{data.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-dark mt-3">Submit</button>
    </form>
</div>